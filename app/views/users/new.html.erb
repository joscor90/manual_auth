<h2>Sign Up</h2>

<%= form_with(model: @user, local: true) do |ff| %>

    <div class="form-group">
        <div class='field'>
            <%= ff.label :name %>
            <%= ff.text_field :name, class: 'form-control' %>

        </div>
        <div class='field'>
            <%= ff.label :email %>
            <%= ff.email_field :email, class: 'form-control'%>
            
        </div>
        <div class='field'>
            <%= ff.label :password %>
            <%= ff.password_field :password, class: 'form-control' %>
            
        </div>
        <div class='field'>
            <%= ff.label :password_confirmation %>
            <%= ff.password_field :password_confirmation, class: 'form-control' %>

        </div>
    </div>

    <%= ff.submit %>

<% end %>